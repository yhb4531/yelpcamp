<% layout('layouts/boilerplate') %>
<div id="map" style="width: 100%; height: 500px;"></div>

<h1>All Attractions</h1>
<div>
    <a href="/attractions/new">Add Attraction</a>
</div>

<% for(let attraction of attractions){ %>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <% if(attraction.images.length){ %>
            <img src="<%= attraction.images[0].url %> " alt="" class="img-fluid">
            <% }else{ %>
            <img src="https://res.cloudinary.com/ehyoo/image/upload/v1629608718/CRUD_Project/xmtvakfqbk5x7pa45tmw.jpg" alt="" class="img-fluid">
            <% } %> 
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= attraction.title %></h5>
                <p class="card-text"><%= attraction.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= attraction.location %> </small>
                </p>
                <a href="/attractions/<%= attraction._id %> " class="btn btn-primary">View <%= attraction.title %> </a>
            </div>
        </div>
    </div>
</div>
<% } %> 

